<!-- main -->
<main class="background h-100">
    <section class="posts justify-content-center">
        <div class="d-flex justify-content-center">
            <a href="/create-post" class="link"><button id="create-post" type="submit" class="btn-create btn rounded-pill shadow">Create Post</button></a>
        </div>

        {{#each posts}}
        <a href="/posts/{{id}}" class="link">
            <article class="post">
                <div class="d-flex flex-wrap align-items-center justify-content-between">
                    <h2>{{fix_case title}}</h2>
                    <p>posted by {{user.username}} on {{format_date createdAt}}</p>
                </div>
                <p class="home-content">
                    {{limit_char content}}
                </p>
            </article>
        </a>
        {{/each}}
    </section>
</main>
<!-- main end -->