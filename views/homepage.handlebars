<!-- main -->
<main>
    <section class="posts">
        {{!-- all from each post object --}}
        {{#each posts}}
        <article class="post">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <h2>{{title}}</h2>
                <p>posted by {{user.username}} on {{created_at}}</p>
            </div>
            <p class="home-content">
                {{content}}
            </p>
        </article>
        {{/each}}
    </section>
</main>
<!-- main end -->